<div class="ai-chat-layout" style="height: calc(100vh - 2rem); margin: -1.5rem;">
      <%# Left Sidebar - Conversations %>
      <aside class="ai-conversations">
        <div class="ai-conversations-header">
          <h1 class="ai-conversations-title">Conversations</h1>
        </div>

        <%# Assistant Selector Grid %>
        <div class="ai-assistants">
          <div class="ai-assistants-title">Assistants</div>
          <div class="ai-assistants-grid">
            <%= link_to ai_conversations_path(assistant: :max), method: :post, class: "ai-assistant-btn #{'active' if @conversation.assistant == 'max'}", data: { turbo_method: :post } do %>
              <div class="ai-assistant-avatar ai-avatar-max">游</div>
              <div class="ai-assistant-name">Max</div>
            <% end %>

            <%= link_to ai_conversations_path(assistant: :sage), method: :post, class: "ai-assistant-btn #{'active' if @conversation.assistant == 'sage'}", data: { turbo_method: :post } do %>
              <div class="ai-assistant-avatar ai-avatar-sage">游빐</div>
              <div class="ai-assistant-name">Sage</div>
            <% end %>

            <%= link_to ai_conversations_path(assistant: :nina), method: :post, class: "ai-assistant-btn #{'active' if @conversation.assistant == 'nina'}", data: { turbo_method: :post } do %>
              <div class="ai-assistant-avatar ai-avatar-nina">游뱋</div>
              <div class="ai-assistant-name">Nina</div>
            <% end %>

            <%= link_to ai_conversations_path(assistant: :doc), method: :post, class: "ai-assistant-btn #{'active' if @conversation.assistant == 'doc'}", data: { turbo_method: :post } do %>
              <div class="ai-assistant-avatar ai-avatar-doc">游늯</div>
              <div class="ai-assistant-name">Doc</div>
            <% end %>

            <%= link_to ai_conversations_path(assistant: :scout), method: :post, class: "ai-assistant-btn #{'active' if @conversation.assistant == 'scout'}", data: { turbo_method: :post } do %>
              <div class="ai-assistant-avatar ai-avatar-scout">游늵</div>
              <div class="ai-assistant-name">Scout</div>
            <% end %>

            <%= link_to ai_conversations_path(assistant: :ally), method: :post, class: "ai-assistant-btn #{'active' if @conversation.assistant == 'ally'}", data: { turbo_method: :post } do %>
              <div class="ai-assistant-avatar ai-avatar-ally">游논</div>
              <div class="ai-assistant-name">Ally</div>
            <% end %>
          </div>
        </div>

        <%# Conversation List %>
        <div class="ai-conversations-list">
          <% @conversations = current_user.ai_conversations.by_assistant(@conversation.assistant).recent.limit(20) %>
          <% @conversations.each do |conv| %>
            <%= link_to ai_conversation_path(conv), class: "ai-conversation-item #{'active' if conv.id == @conversation.id}" do %>
              <div class="ai-conversation-avatar ai-avatar-<%= conv.assistant %>">
                <% case conv.assistant %>
                <% when "max" %>游
                <% when "sage" %>游빐
                <% when "nina" %>游뱋
                <% when "doc" %>游늯
                <% when "scout" %>游늵
                <% when "ally" %>游논
                <% end %>
              </div>
              <div class="ai-conversation-content">
                <div class="ai-conversation-name">
                  <% if conv.id == @conversation.id %>
                    Current Chat
                  <% else %>
                    <%= time_ago_in_words(conv.started_at) %> ago
                  <% end %>
                </div>
                <div class="ai-conversation-preview"><%= conv.preview || "New conversation" %></div>
              </div>
            <% end %>
          <% end %>

          <% if @conversations.empty? %>
            <div class="p-4 text-center text-muted text-small">
              No previous conversations with this assistant
            </div>
          <% end %>
        </div>
      </aside>

      <%# Main Chat Area %>
      <div class="ai-chat-main">
        <%# Chat Header %>
        <% assistant_key = @conversation.assistant.to_sym %>
        <% assistant_info = AI::AssistantService::ASSISTANTS[assistant_key] %>
        <header class="ai-chat-header">
          <div class="ai-chat-assistant">
            <div class="ai-chat-assistant-avatar ai-avatar-<%= @conversation.assistant %>">
              <% case @conversation.assistant %>
              <% when "max" %>游
              <% when "sage" %>游빐
              <% when "nina" %>游뱋
              <% when "doc" %>游늯
              <% when "scout" %>游늵
              <% when "ally" %>游논
              <% end %>
            </div>
            <div class="ai-chat-assistant-info">
              <h2><%= assistant_info&.dig(:name) || @conversation.assistant.titleize %></h2>
              <p><%= assistant_info&.dig(:title) %></p>
            </div>
          </div>
          <div class="ai-chat-actions">
            <%= link_to ai_conversations_path, class: "btn btn-ghost btn-sm" do %>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                <polyline points="9 22 9 12 15 12 15 22"/>
              </svg>
              All Assistants
            <% end %>
            <%= link_to ai_conversations_path(assistant: @conversation.assistant), method: :post, class: "btn btn-secondary btn-sm", data: { turbo_method: :post } do %>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 5v14M5 12h14"/>
              </svg>
              New Chat
            <% end %>
          </div>
        </header>

        <%# Messages Container %>
        <% messages = @conversation.ai_messages.where(role: %w[user assistant]).chronological %>
        <% if messages.any? %>
          <%= turbo_frame_tag "messages" do %>
            <div class="ai-messages" id="messages-container">
              <% messages.each do |message| %>
                <%= render "ai/conversations/message", message: message, conversation: @conversation %>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <%# Empty State with Suggestions %>
          <div class="ai-empty-state">
            <div class="ai-empty-avatar ai-avatar-<%= @conversation.assistant %>">
              <% case @conversation.assistant %>
              <% when "max" %>游
              <% when "sage" %>游빐
              <% when "nina" %>游뱋
              <% when "doc" %>游늯
              <% when "scout" %>游늵
              <% when "ally" %>游논
              <% end %>
            </div>
            <h2 class="ai-empty-title">Hi, I'm <%= assistant_info&.dig(:name) %>!</h2>
            <p class="ai-empty-description"><%= assistant_info&.dig(:description) %></p>

            <%# Starter Prompts %>
            <% service = AI::AssistantService.new(user: current_user, assistant_type: @conversation.assistant) %>
            <% suggestions = service.suggested_questions %>
            <% if suggestions.present? %>
              <div class="ai-starter-prompts">
                <% suggestions.each do |question| %>
                  <button type="button" class="ai-starter-prompt" data-suggestion="<%= question %>" onclick="document.getElementById('message_content').value = this.dataset.suggestion; document.getElementById('message_content').focus();">
                    <div class="ai-starter-prompt-text"><%= question %></div>
                  </button>
                <% end %>
              </div>
            <% end %>
          </div>

          <%= turbo_frame_tag "messages" do %>
            <div class="ai-messages" id="messages-container" style="display: none;"></div>
          <% end %>
        <% end %>

        <%# Suggestions Bar (shown when messages exist) %>
        <% if messages.any? %>
          <% service = AI::AssistantService.new(user: current_user, assistant_type: @conversation.assistant) %>
          <% suggestions = service.suggested_questions %>
          <% if suggestions.present? %>
            <div class="ai-suggestions">
              <% suggestions.first(3).each do |question| %>
                <button type="button" class="ai-suggestion" data-suggestion="<%= question %>" onclick="document.getElementById('message_content').value = this.dataset.suggestion; document.getElementById('message_content').focus();">
                  <%= question.truncate(50) %>
                </button>
              <% end %>
            </div>
          <% end %>
        <% end %>

        <%# Input Area %>
        <div class="ai-input-area">
          <%= form_with url: message_ai_conversation_path(@conversation), method: :post, id: "message_form", data: { turbo_frame: "messages" } do |f| %>
            <div class="ai-input-container">
              <div class="ai-input-wrapper">
                <%= f.text_area :content,
                      id: "message_content",
                      class: "ai-input",
                      placeholder: "Ask #{assistant_info&.dig(:name)} anything...",
                      rows: 1,
                      autofocus: true,
                      data: { action: "keydown->ai-chat#handleKeydown input->ai-chat#autoResize" } %>
                <div class="ai-input-actions">
                  <button type="button" class="ai-input-btn" title="Attach file" disabled>
                    <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="m21.44 11.05-9.19 9.19a6 6 0 0 1-8.49-8.49l8.57-8.57A4 4 0 1 1 18 8.84l-8.59 8.57a2 2 0 0 1-2.83-2.83l8.49-8.48"/>
                    </svg>
                  </button>
                </div>
              </div>
              <button type="submit" class="ai-send-btn" title="Send message">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="22" y1="2" x2="11" y2="13"/>
                  <polygon points="22 2 15 22 11 13 2 9 22 2"/>
                </svg>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>

<script>
  // Auto-resize textarea
  document.addEventListener('DOMContentLoaded', function() {
    const textarea = document.getElementById('message_content');
    if (textarea) {
      textarea.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = Math.min(this.scrollHeight, 120) + 'px';
      });

      // Submit on Enter (without Shift)
      textarea.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && !e.shiftKey) {
          e.preventDefault();
          document.getElementById('message_form').requestSubmit();
        }
      });
    }

    // Scroll to bottom of messages
    const messagesContainer = document.getElementById('messages-container');
    if (messagesContainer) {
      messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }
  });

  // Handle form submission
  document.getElementById('message_form')?.addEventListener('turbo:submit-end', function() {
    const textarea = document.getElementById('message_content');
    if (textarea) {
      textarea.value = '';
      textarea.style.height = 'auto';
    }

    // Show messages container if hidden
    const container = document.getElementById('messages-container');
    if (container) {
      container.style.display = '';
    }

    // Hide empty state
    const emptyState = document.querySelector('.ai-empty-state');
    if (emptyState) {
      emptyState.style.display = 'none';
    }

    // Scroll to bottom
    setTimeout(() => {
      const messagesContainer = document.getElementById('messages-container');
      if (messagesContainer) {
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
      }
    }, 100);
  });
</script>
