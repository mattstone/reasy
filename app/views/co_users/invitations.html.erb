
      <%# Page Header %>
      <div class="page-header">
        <div class="page-header-content">
          <h1 class="page-title">Invitations</h1>
          <p class="page-subtitle">Manage your co-user invitations</p>
        </div>
        <div class="page-header-actions">
          <%= link_to co_users_path, class: "btn btn-secondary" do %>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15 18 9 12 15 6"/>
            </svg>
            Back to Co-Users
          <% end %>
          <% if current_user.can_add_co_users? %>
            <%= link_to new_co_user_invitation_path, class: "btn btn-primary" do %>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 2v20M2 12h20"/>
              </svg>
              New Invitation
            <% end %>
          <% end %>
        </div>
      </div>

      <%# Received Invitations %>
      <% if @received_invitations.any? %>
        <div class="dashboard-panel mb-6">
          <div class="dashboard-panel-header">
            <div>
              <h2 class="dashboard-panel-title">Received Invitations</h2>
              <p class="dashboard-panel-subtitle">Invitations to become a co-user</p>
            </div>
          </div>

          <div class="invitation-list">
            <% @received_invitations.each do |invitation| %>
              <div class="invitation-item invitation-item-received">
                <div class="invitation-item-info">
                  <div class="invitation-item-avatar">
                    <% if invitation.inviter.avatar&.attached? %>
                      <%= image_tag invitation.inviter.avatar, class: "avatar avatar-md" %>
                    <% else %>
                      <div class="avatar avatar-md avatar-placeholder">
                        <%= invitation.inviter.name.first.upcase %>
                      </div>
                    <% end %>
                  </div>
                  <div>
                    <h4><%= invitation.inviter.name %></h4>
                    <p class="text-muted">
                      Invited you as <%= invitation.relationship&.humanize || "Co-user" %>
                    </p>
                    <% if invitation.personal_message.present? %>
                      <p class="invitation-message">"<%= invitation.personal_message %>"</p>
                    <% end %>
                  </div>
                </div>
                <div class="invitation-item-meta">
                  <span class="text-muted">Expires in <%= invitation.days_until_expiry %> days</span>
                </div>
                <div class="invitation-item-actions">
                  <%= link_to accept_co_user_invitation_path(invitation.invitation_token), class: "btn btn-primary btn-sm" do %>
                    Accept
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Sent Invitations %>
      <div class="dashboard-panel">
        <div class="dashboard-panel-header">
          <div>
            <h2 class="dashboard-panel-title">Sent Invitations</h2>
            <p class="dashboard-panel-subtitle">Invitations you've sent to others</p>
          </div>
        </div>

        <% if @pending_invitations.any? %>
          <div class="invitation-list">
            <% @pending_invitations.each do |invitation| %>
              <div class="invitation-item">
                <div class="invitation-item-info">
                  <div class="invitation-item-avatar">
                    <div class="avatar avatar-md avatar-placeholder">
                      <%= invitation.email.first.upcase %>
                    </div>
                  </div>
                  <div>
                    <h4><%= invitation.email %></h4>
                    <p class="text-muted">
                      <% if invitation.relationship.present? %>
                        Invited as <%= invitation.relationship.humanize %>
                      <% else %>
                        Invitation sent
                      <% end %>
                    </p>
                  </div>
                </div>
                <div class="invitation-item-meta">
                  <% if invitation.expired? %>
                    <span class="badge badge-red badge-sm">Expired</span>
                  <% else %>
                    <span class="text-muted">Expires in <%= invitation.days_until_expiry %> days</span>
                  <% end %>
                </div>
                <div class="invitation-item-actions">
                  <% unless invitation.expired? %>
                    <%= button_to resend_co_user_invitation_path(invitation), method: :post, class: "btn btn-ghost btn-sm" do %>
                      Resend
                    <% end %>
                  <% end %>
                  <%= button_to revoke_co_user_invitation_path(invitation), method: :post, class: "btn btn-ghost btn-sm btn-danger", data: { turbo_confirm: "Are you sure you want to revoke this invitation?" } do %>
                    Revoke
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="empty-state">
            <div class="empty-state-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect width="20" height="16" x="2" y="4" rx="2"/>
                <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
              </svg>
            </div>
            <h3 class="empty-state-title">No pending invitations</h3>
            <p class="empty-state-description">
              Invitations you send will appear here until they're accepted.
            </p>
          </div>
        <% end %>
      </div>
