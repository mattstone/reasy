<div class="admin-content">
  <div class="admin-page-header">
    <div>
      <h1 class="admin-page-title">Property Analytics</h1>
      <p class="admin-page-subtitle">Property listing metrics and trends</p>
    </div>
    <div class="admin-page-actions">
      <%= link_to "Back to Overview", admin_analytics_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="admin-grid-2 mb-6">
    <div class="admin-panel">
      <div class="admin-panel-header">
        <h2 class="admin-panel-title">Properties by Status</h2>
      </div>
      <div class="admin-panel-content">
        <div class="admin-detail-list">
          <% @properties_by_status.each do |status, count| %>
            <div class="admin-detail-row">
              <span class="admin-detail-label"><%= status&.humanize || "Unknown" %></span>
              <span class="admin-detail-value"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="admin-panel">
      <div class="admin-panel-header">
        <h2 class="admin-panel-title">Properties by Type</h2>
      </div>
      <div class="admin-panel-content">
        <div class="admin-detail-list">
          <% @properties_by_type.each do |type, count| %>
            <div class="admin-detail-row">
              <span class="admin-detail-label"><%= type&.humanize || "Unknown" %></span>
              <span class="admin-detail-value"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="admin-panel">
    <div class="admin-panel-header">
      <h2 class="admin-panel-title">Properties by State</h2>
    </div>
    <div class="admin-panel-content">
      <div class="admin-detail-list">
        <% @properties_by_state.each do |state, count| %>
          <div class="admin-detail-row">
            <span class="admin-detail-label"><%= state || "Unknown" %></span>
            <span class="admin-detail-value"><%= count %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
