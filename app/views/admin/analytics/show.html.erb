<div class="admin-content">
  <div class="admin-page-header">
    <div>
      <h1 class="admin-page-title">Platform Analytics</h1>
      <p class="admin-page-subtitle">Overview of platform performance</p>
    </div>
  </div>

  <div class="stat-cards-4 mb-6">
    <div class="metric-card">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= number_with_delimiter(@total_users) %></div>
        <div class="metric-card-label">Total Users</div>
        <div class="metric-card-change positive">+<%= @new_users_this_week %> this week</div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= number_with_delimiter(@total_properties) %></div>
        <div class="metric-card-label">Total Properties</div>
        <div class="metric-card-change"><%= @active_properties %> active</div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= number_with_delimiter(@sold_properties) %></div>
        <div class="metric-card-label">Properties Sold</div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= number_with_delimiter(@total_transactions) %></div>
        <div class="metric-card-label">Transactions</div>
        <div class="metric-card-change"><%= @active_transactions %> active</div>
      </div>
    </div>
  </div>

  <div class="admin-grid-3 mb-6">
    <%= link_to admin_analytics_users_path, class: "admin-panel" do %>
      <div class="admin-panel-content text-center py-6">
        <h3 class="text-lg font-medium mb-2">User Analytics</h3>
        <p class="text-sm text-muted">Signups, roles, verification stats</p>
      </div>
    <% end %>
    <%= link_to admin_analytics_properties_path, class: "admin-panel" do %>
      <div class="admin-panel-content text-center py-6">
        <h3 class="text-lg font-medium mb-2">Property Analytics</h3>
        <p class="text-sm text-muted">Listings, types, locations</p>
      </div>
    <% end %>
    <%= link_to admin_analytics_transactions_path, class: "admin-panel" do %>
      <div class="admin-panel-content text-center py-6">
        <h3 class="text-lg font-medium mb-2">Transaction Analytics</h3>
        <p class="text-sm text-muted">Sales, values, completion rates</p>
      </div>
    <% end %>
  </div>
</div>
