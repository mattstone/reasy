<div class="admin-content">
  <div class="admin-page-header">
    <div>
      <h1 class="admin-page-title">User Analytics</h1>
      <p class="admin-page-subtitle">User registration and verification metrics</p>
    </div>
    <div class="admin-page-actions">
      <%= link_to "Back to Overview", admin_analytics_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="admin-grid-2 mb-6">
    <div class="admin-panel">
      <div class="admin-panel-header">
        <h2 class="admin-panel-title">Users by Role</h2>
      </div>
      <div class="admin-panel-content">
        <div class="admin-detail-list">
          <div class="admin-detail-row">
            <span class="admin-detail-label">Buyers</span>
            <span class="admin-detail-value"><%= @users_by_role[:buyers] %></span>
          </div>
          <div class="admin-detail-row">
            <span class="admin-detail-label">Sellers</span>
            <span class="admin-detail-value"><%= @users_by_role[:sellers] %></span>
          </div>
          <div class="admin-detail-row">
            <span class="admin-detail-label">Service Providers</span>
            <span class="admin-detail-value"><%= @users_by_role[:providers] %></span>
          </div>
        </div>
      </div>
    </div>

    <div class="admin-panel">
      <div class="admin-panel-header">
        <h2 class="admin-panel-title">KYC Status</h2>
      </div>
      <div class="admin-panel-content">
        <div class="admin-detail-list">
          <% @users_by_kyc.each do |status, count| %>
            <div class="admin-detail-row">
              <span class="admin-detail-label"><%= status&.humanize || "Unknown" %></span>
              <span class="admin-detail-value"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="admin-panel">
    <div class="admin-panel-header">
      <h2 class="admin-panel-title">Subscription Status</h2>
    </div>
    <div class="admin-panel-content">
      <div class="admin-detail-list">
        <% @users_by_subscription.each do |status, count| %>
          <div class="admin-detail-row">
            <span class="admin-detail-label"><%= status&.humanize || "Unknown" %></span>
            <span class="admin-detail-value"><%= count %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
