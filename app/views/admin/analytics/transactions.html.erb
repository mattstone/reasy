<div class="admin-content">
  <div class="admin-page-header">
    <div>
      <h1 class="admin-page-title">Transaction Analytics</h1>
      <p class="admin-page-subtitle">Sales and transaction metrics</p>
    </div>
    <div class="admin-page-actions">
      <%= link_to "Back to Overview", admin_analytics_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <div class="stat-cards-2 mb-6">
    <div class="metric-card">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= number_to_currency(@total_value, precision: 0) %></div>
        <div class="metric-card-label">Total Transaction Value</div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= @transactions_by_status.values.sum %></div>
        <div class="metric-card-label">Total Transactions</div>
      </div>
    </div>
  </div>

  <div class="admin-panel">
    <div class="admin-panel-header">
      <h2 class="admin-panel-title">Transactions by Status</h2>
    </div>
    <div class="admin-panel-content">
      <div class="admin-detail-list">
        <% @transactions_by_status.each do |status, count| %>
          <div class="admin-detail-row">
            <span class="admin-detail-label"><%= status&.humanize || "Unknown" %></span>
            <span class="admin-detail-value"><%= count %></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
