<div class="admin-content">
  <div class="admin-page-header">
    <div>
      <h1 class="admin-page-title">AI Analytics</h1>
      <p class="admin-page-subtitle">AI assistant usage and performance metrics</p>
    </div>
  </div>

  <div class="stat-cards-4 mb-6">
    <div class="metric-card">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= number_with_delimiter(@total_conversations) %></div>
        <div class="metric-card-label">Total Conversations</div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= number_with_delimiter(@total_messages) %></div>
        <div class="metric-card-label">Total Messages</div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= number_with_delimiter(@unique_users) %></div>
        <div class="metric-card-label">Unique Users</div>
      </div>
    </div>
    <div class="metric-card">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= number_with_delimiter(@messages_this_week) %></div>
        <div class="metric-card-label">Messages This Week</div>
      </div>
    </div>
  </div>

  <div class="admin-grid-2">
    <div class="admin-panel">
      <div class="admin-panel-header">
        <h2 class="admin-panel-title">Conversations by Assistant</h2>
      </div>
      <div class="admin-panel-content">
        <div class="admin-detail-list">
          <% @conversations_by_assistant.each do |assistant, count| %>
            <div class="admin-detail-row">
              <span class="admin-detail-label"><%= assistant&.humanize || "Unknown" %></span>
              <span class="admin-detail-value"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="admin-panel">
      <div class="admin-panel-header">
        <h2 class="admin-panel-title">Top Users</h2>
      </div>
      <div class="admin-panel-content">
        <div class="admin-detail-list">
          <% @top_users.each do |user_id, count| %>
            <% user = User.find_by(id: user_id) %>
            <div class="admin-detail-row">
              <span class="admin-detail-label"><%= user&.name || "Unknown" %></span>
              <span class="admin-detail-value"><%= count %> conversations</span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
