<div class="admin-content">
  <div class="admin-page-header">
    <div>
      <h1 class="admin-page-title">AI Voice Settings</h1>
      <p class="admin-page-subtitle">Configure assistant personalities and response styles</p>
    </div>
  </div>

  <div class="admin-grid-2">
    <% @assistants.each do |key, assistant| %>
      <div class="admin-panel">
        <div class="admin-panel-header">
          <h2 class="admin-panel-title"><%= assistant[:name] %></h2>
        </div>
        <div class="admin-panel-content">
          <p class="text-sm text-muted mb-4"><%= assistant[:description] %></p>
          <div class="flex gap-2">
            <%= link_to "View Settings", admin_ai_voice_setting_path(key), class: "btn btn-secondary btn-sm" %>
            <%= link_to "Edit", edit_admin_ai_voice_setting_path(key), class: "btn btn-ghost btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
