<div class="admin-content">
  <div class="admin-page-header">
    <div>
      <h1 class="admin-page-title">Provider Verifications</h1>
      <p class="admin-page-subtitle">Review service provider verification requests</p>
    </div>
  </div>

  <div class="stat-cards-3 mb-6">
    <div class="metric-card metric-card-sm">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= @submitted_count %></div>
        <div class="metric-card-label">Submitted</div>
      </div>
    </div>
    <div class="metric-card metric-card-sm">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= @under_review_count %></div>
        <div class="metric-card-label">Under Review</div>
      </div>
    </div>
    <div class="metric-card metric-card-sm">
      <div class="metric-card-content">
        <div class="metric-card-value"><%= @verified_count %></div>
        <div class="metric-card-label">Verified</div>
      </div>
    </div>
  </div>

  <div class="admin-panel">
    <div class="admin-table-wrapper">
      <table class="admin-table">
        <thead>
          <tr>
            <th>Business</th>
            <th>Service Type</th>
            <th>Owner</th>
            <th>Status</th>
            <th>Submitted</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @profiles.each do |profile| %>
            <tr>
              <td><%= profile.business_name %></td>
              <td><span class="badge badge-sm badge-gray"><%= profile.service_type&.humanize %></span></td>
              <td><%= link_to profile.user.name, admin_user_path(profile.user) %></td>
              <td><span class="badge badge-sm badge-yellow"><%= profile.verification_status&.humanize %></span></td>
              <td class="text-muted text-sm"><%= profile.updated_at.strftime("%b %d, %Y") %></td>
              <td>
                <div class="table-actions">
                  <%= link_to "Review", admin_provider_verification_path(profile), class: "btn btn-ghost btn-sm" %>
                  <%= button_to "Approve", approve_admin_provider_verification_path(profile), method: :post, class: "btn btn-primary btn-sm" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <% if @pagy.pages > 1 %>
      <div class="pagination-wrapper">
        <%== pagy_nav(@pagy) %>
      </div>
    <% end %>
  </div>
</div>
