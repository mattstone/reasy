
      <%# Page Header %>
      <div class="page-header">
        <div class="page-header-content">
          <h1 class="page-title">Reviews</h1>
          <p class="page-subtitle">Manage your reviews and reputation</p>
        </div>
      </div>

      <%# Stats Cards %>
      <div class="stat-cards-3 mb-6">
        <div class="metric-card">
          <div class="metric-card-header">
            <div class="metric-card-icon metric-card-icon-blue">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
            </div>
          </div>
          <div class="metric-card-content">
            <div class="metric-card-value"><%= @average_rating %></div>
            <div class="metric-card-label">Average Rating</div>
          </div>
        </div>

        <div class="metric-card">
          <div class="metric-card-header">
            <div class="metric-card-icon metric-card-icon-green">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
              </svg>
            </div>
          </div>
          <div class="metric-card-content">
            <div class="metric-card-value"><%= @reviews_received_count %></div>
            <div class="metric-card-label">Reviews Received</div>
          </div>
        </div>

        <div class="metric-card">
          <div class="metric-card-header">
            <div class="metric-card-icon metric-card-icon-purple">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
              </svg>
            </div>
          </div>
          <div class="metric-card-content">
            <div class="metric-card-value"><%= @reviews_given_count %></div>
            <div class="metric-card-label">Reviews Given</div>
          </div>
        </div>
      </div>

      <%# Filter Tabs %>
      <div class="notification-filters mb-4">
        <div class="filter-pills">
          <%= link_to "All", reviews_path, class: "filter-pill #{'filter-pill-active' unless params[:type]}" %>
          <%= link_to "Received", reviews_path(type: "received"), class: "filter-pill #{'filter-pill-active' if params[:type] == 'received'}" %>
          <%= link_to "Given", reviews_path(type: "given"), class: "filter-pill #{'filter-pill-active' if params[:type] == 'given'}" %>
        </div>
      </div>

      <%# Reviews List %>
      <div class="dashboard-panel">
        <% if @reviews.any? %>
          <div class="review-list">
            <% @reviews.each do |review| %>
              <%= render "review_card", review: review %>
            <% end %>
          </div>

          <%# Pagination %>
          <% if @pagy.pages > 1 %>
            <div class="pagination-wrapper">
              <%== pagy_nav(@pagy) %>
            </div>
          <% end %>
        <% else %>
          <div class="empty-state">
            <div class="empty-state-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
              </svg>
            </div>
            <h3 class="empty-state-title">No reviews yet</h3>
            <p class="empty-state-description">
              Reviews will appear here after completing transactions with other users.
            </p>
          </div>
        <% end %>
      </div>
