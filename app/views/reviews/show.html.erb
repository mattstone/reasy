<%
  is_mine = @review.reviewer_id == current_user.id
  is_about_me = @review.reviewee_id == current_user.id
%>


      <%# Back Link %>
      <div class="mb-4">
        <%= link_to reviews_path, class: "btn btn-ghost btn-sm" do %>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"/>
          </svg>
          Back to Reviews
        <% end %>
      </div>

      <%# Review Detail Card %>
      <div class="dashboard-panel">
        <div class="review-detail">
          <%# Header %>
          <div class="review-detail-header">
            <div class="review-detail-rating">
              <div class="review-stars-lg">
                <% 5.times do |i| %>
                  <svg width="28" height="28" viewBox="0 0 24 24" fill="<%= i < @review.overall_rating ? 'currentColor' : 'none' %>" stroke="currentColor" stroke-width="2" class="<%= i < @review.overall_rating ? 'star-filled' : 'star-empty' %>">
                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/>
                  </svg>
                <% end %>
              </div>
              <span class="review-rating-value"><%= @review.overall_rating %>.0</span>
            </div>

            <% unless @review.published? %>
              <div class="review-detail-status">
                <% if @review.held? %>
                  <div class="status-banner status-banner-warning">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="12 6 12 12 16 14"/>
                    </svg>
                    <div>
                      <strong>Review on Hold</strong>
                      <% if @review.on_hold? %>
                        <p>This review will be published in <%= @review.hours_until_release %> hours unless disputed.</p>
                      <% else %>
                        <p>Hold period expired. Awaiting automatic publication.</p>
                      <% end %>
                    </div>
                  </div>
                <% elsif @review.disputed? %>
                  <div class="status-banner status-banner-error">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                      <line x1="12" y1="9" x2="12" y2="13"/>
                      <line x1="12" y1="17" x2="12.01" y2="17"/>
                    </svg>
                    <div>
                      <strong>Under Dispute</strong>
                      <p>This review is being reviewed by our moderation team.</p>
                    </div>
                  </div>
                <% elsif @review.removed? %>
                  <div class="status-banner status-banner-muted">
                    <strong>This review has been removed</strong>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>

          <%# Participants %>
          <div class="review-participants">
            <div class="review-participant">
              <% if @review.reviewer.avatar&.attached? %>
                <%= image_tag @review.reviewer.avatar, class: "avatar avatar-lg" %>
              <% else %>
                <div class="avatar avatar-lg avatar-placeholder">
                  <%= @review.reviewer.name.first.upcase %>
                </div>
              <% end %>
              <div class="review-participant-info">
                <span class="review-participant-label">Review by</span>
                <span class="review-participant-name"><%= @review.reviewer.name %></span>
              </div>
            </div>

            <div class="review-participant-arrow">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="5" y1="12" x2="19" y2="12"/>
                <polyline points="12 5 19 12 12 19"/>
              </svg>
            </div>

            <div class="review-participant">
              <% if @review.reviewee.avatar&.attached? %>
                <%= image_tag @review.reviewee.avatar, class: "avatar avatar-lg" %>
              <% else %>
                <div class="avatar avatar-lg avatar-placeholder">
                  <%= @review.reviewee.name.first.upcase %>
                </div>
              <% end %>
              <div class="review-participant-info">
                <span class="review-participant-label">Review for</span>
                <span class="review-participant-name"><%= @review.reviewee.name %></span>
                <span class="badge badge-sm badge-gray"><%= @review.reviewee_role.humanize %></span>
              </div>
            </div>
          </div>

          <%# Title & Body %>
          <% if @review.title.present? %>
            <h2 class="review-detail-title"><%= @review.title %></h2>
          <% end %>

          <div class="review-detail-body">
            <%= simple_format(@review.body, {}, sanitize: true) %>
          </div>

          <%# Category Ratings %>
          <% if @review.category_ratings.present? %>
            <div class="review-detail-categories">
              <h3 class="review-section-title">Category Ratings</h3>
              <div class="review-categories-grid">
                <% @review.category_ratings.each do |category, rating| %>
                  <div class="review-category-detail">
                    <span class="review-category-label"><%= category.humanize %></span>
                    <div class="review-category-bar">
                      <div class="review-category-bar-fill" style="width: <%= (rating / 5.0) * 100 %>%"></div>
                    </div>
                    <span class="review-category-value"><%= rating %>/5</span>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>

          <%# Meta %>
          <div class="review-detail-meta">
            <span class="text-muted">
              Posted <%= @review.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </span>
          </div>
        </div>
      </div>

      <%# Public Response Section %>
      <% if @review.has_response? %>
        <div class="dashboard-panel mt-6">
          <div class="dashboard-panel-header">
            <h2 class="dashboard-panel-title">Response from <%= @review.reviewee.name %></h2>
          </div>
          <div class="review-response-detail">
            <%= simple_format(@review.public_response, {}, sanitize: true) %>
            <p class="text-muted text-sm mt-4">
              Responded <%= time_ago_in_words(@review.public_response_at) %> ago
            </p>
          </div>
        </div>
      <% elsif is_about_me && @review.published? %>
        <div class="dashboard-panel mt-6" id="respond">
          <div class="dashboard-panel-header">
            <h2 class="dashboard-panel-title">Respond to this Review</h2>
            <p class="dashboard-panel-subtitle">Your response will be publicly visible</p>
          </div>

          <%= form_with url: respond_review_path(@review), method: :post, class: "review-response-form" do |f| %>
            <div class="form-group">
              <%= f.text_area :public_response,
                              class: "form-control",
                              rows: 4,
                              placeholder: "Write a professional response to this review...",
                              maxlength: 1000 %>
              <p class="form-hint">Maximum 1000 characters</p>
            </div>

            <div class="form-actions">
              <%= f.submit "Post Response", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      <% end %>

      <%# Dispute Section %>
      <% if is_about_me && @review.published? && !@review.has_active_dispute? %>
        <div class="dashboard-panel mt-6">
          <div class="review-dispute-cta">
            <div>
              <h3>Have an issue with this review?</h3>
              <p class="text-muted">If this review contains false information, inappropriate content, or violates our guidelines, you can submit a dispute.</p>
            </div>
            <%= link_to new_review_review_dispute_path(@review), class: "btn btn-secondary" do %>
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M3 3h18v18H3zM15 9l-6 6m0-6l6 6"/>
              </svg>
              Dispute Review
            <% end %>
          </div>
        </div>
      <% end %>

      <%# Active Dispute Info %>
      <% if @review.has_active_dispute? %>
        <% dispute = @review.latest_dispute %>
        <div class="dashboard-panel mt-6">
          <div class="dashboard-panel-header">
            <h2 class="dashboard-panel-title">Active Dispute</h2>
          </div>
          <div class="dispute-info">
            <div class="dispute-info-row">
              <span class="dispute-info-label">Status</span>
              <span class="badge <%= dispute.pending? ? 'badge-orange' : 'badge-blue' %>">
                <%= dispute.status.humanize %>
              </span>
            </div>
            <div class="dispute-info-row">
              <span class="dispute-info-label">Reason</span>
              <span><%= dispute.reason_display %></span>
            </div>
            <div class="dispute-info-row">
              <span class="dispute-info-label">Submitted</span>
              <span><%= time_ago_in_words(dispute.created_at) %> ago</span>
            </div>
          </div>
        </div>
      <% end %>
