<aside class="sidebar">
  <%# Sidebar Header with Logo %>
  <div class="sidebar-header">
    <%= link_to root_path, class: "sidebar-logo" do %>
      <div class="sidebar-logo-icon">R</div>
      <span class="sidebar-logo-text">Re<span>asy</span></span>
    <% end %>
  </div>

  <%# User Selector %>
  <div class="customer-selector">
    <button class="customer-selector-button" type="button">
      <div class="customer-avatar">
        <%= current_user.name&.first&.upcase || "U" %>
      </div>
      <div class="customer-info">
        <div class="customer-name"><%= current_user.name || "User" %></div>
        <div class="customer-meta">
          <% if current_user.buyer? && current_user.seller? %>
            Buyer & Seller
          <% elsif current_user.buyer? %>
            Buyer
          <% elsif current_user.seller? %>
            Seller
          <% elsif current_user.service_provider? %>
            Service Provider
          <% elsif current_user.admin? %>
            Administrator
          <% end %>
        </div>
      </div>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="color: var(--color-gray-400);">
        <path d="m7 15 5 5 5-5"/><path d="m7 9 5-5 5 5"/>
      </svg>
    </button>
  </div>

  <%# Main Navigation %>
  <nav class="sidebar-nav">
    <%# Overview Section %>
    <div class="nav-section">
      <div class="nav-section-title">Overview</div>
      <%= link_to dashboard_path, class: "nav-item #{current_page?(dashboard_path) ? 'active' : ''}" do %>
        <span class="nav-item-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="7" height="7" rx="1"/><rect x="14" y="3" width="7" height="7" rx="1"/>
            <rect x="14" y="14" width="7" height="7" rx="1"/><rect x="3" y="14" width="7" height="7" rx="1"/>
          </svg>
        </span>
        <span class="nav-item-label">Dashboard</span>
      <% end %>

      <%= link_to notifications_path, class: "nav-item" do %>
        <span class="nav-item-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/>
            <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/>
          </svg>
        </span>
        <span class="nav-item-label">Notifications</span>
        <% unread_count = current_user.notifications.unread.count rescue 0 %>
        <% if unread_count > 0 %>
          <span class="nav-item-badge"><%= unread_count > 9 ? '9+' : unread_count %></span>
        <% end %>
      <% end %>

      <%= link_to conversations_path, class: "nav-item" do %>
        <span class="nav-item-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"/>
          </svg>
        </span>
        <span class="nav-item-label">Messages</span>
        <% unread_messages = 0 %>
        <% if unread_messages > 0 %>
          <span class="nav-item-badge nav-item-badge-blue"><%= unread_messages %></span>
        <% end %>
      <% end %>
    </div>

    <% if current_user.buyer? %>
      <%# Buyer Section %>
      <div class="nav-section">
        <div class="nav-section-title">Buying</div>

        <%= link_to properties_path, class: "nav-item" do %>
          <span class="nav-item-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/>
            </svg>
          </span>
          <span class="nav-item-label">Search Properties</span>
        <% end %>

        <%= link_to buyer_saved_properties_path, class: "nav-item" do %>
          <span class="nav-item-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
            </svg>
          </span>
          <span class="nav-item-label">Saved Properties</span>
          <% loved_count = current_user.property_loves.count rescue 0 %>
          <% if loved_count > 0 %>
            <span class="nav-item-badge nav-item-badge-green"><%= loved_count %></span>
          <% end %>
        <% end %>

        <%= link_to buyer_saved_searches_path, class: "nav-item" do %>
          <span class="nav-item-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M6 8a6 6 0 0 1 12 0c0 7 3 9 3 9H3s3-2 3-9"/>
              <path d="M10.3 21a1.94 1.94 0 0 0 3.4 0"/>
            </svg>
          </span>
          <span class="nav-item-label">Saved Searches</span>
        <% end %>

        <%= link_to buyer_profile_path, class: "nav-item" do %>
          <span class="nav-item-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
            </svg>
          </span>
          <span class="nav-item-label">Buyer Profile</span>
        <% end %>
      </div>
    <% end %>

    <% if current_user.seller? %>
      <%# Seller Section %>
      <div class="nav-section">
        <div class="nav-section-title">Selling</div>

        <%= link_to seller_properties_path, class: "nav-item" do %>
          <span class="nav-item-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              <polyline points="9 22 9 12 15 12 15 22"/>
            </svg>
          </span>
          <span class="nav-item-label">My Listings</span>
          <% listings_count = current_user.properties.count rescue 0 %>
          <% if listings_count > 0 %>
            <span class="nav-item-badge nav-item-badge-blue"><%= listings_count %></span>
          <% end %>
        <% end %>

        <%= link_to seller_properties_path(tab: :offers), class: "nav-item" do %>
          <span class="nav-item-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2v20M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/>
            </svg>
          </span>
          <span class="nav-item-label">Offers</span>
          <% pending_offers = Offer.joins(:property).where(properties: { user_id: current_user.id }, status: :pending).count rescue 0 %>
          <% if pending_offers > 0 %>
            <span class="nav-item-badge"><%= pending_offers %></span>
          <% end %>
        <% end %>

        <%= link_to seller_profile_path, class: "nav-item" do %>
          <span class="nav-item-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
            </svg>
          </span>
          <span class="nav-item-label">Seller Profile</span>
        <% end %>
      </div>
    <% end %>

    <% if current_user.service_provider? %>
      <%# Provider Section %>
      <div class="nav-section">
        <div class="nav-section-title">Provider</div>

        <%= link_to provider_leads_path, class: "nav-item" do %>
          <span class="nav-item-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <line x1="19" y1="8" x2="19" y2="14"/>
              <line x1="22" y1="11" x2="16" y2="11"/>
            </svg>
          </span>
          <span class="nav-item-label">Leads</span>
        <% end %>

        <%= link_to provider_jobs_path, class: "nav-item" do %>
          <span class="nav-item-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect width="20" height="14" x="2" y="7" rx="2" ry="2"/>
              <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/>
            </svg>
          </span>
          <span class="nav-item-label">Active Jobs</span>
        <% end %>

        <%= link_to provider_profile_path, class: "nav-item" do %>
          <span class="nav-item-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
            </svg>
          </span>
          <span class="nav-item-label">Provider Profile</span>
        <% end %>
      </div>
    <% end %>

    <%# AI Assistants Section %>
    <div class="nav-section">
      <div class="nav-section-title">AI Assistants</div>

      <%= link_to ai_conversations_path, class: "nav-item nav-item-highlight" do %>
        <span class="nav-item-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 8V4H8"/>
            <rect width="16" height="12" x="4" y="8" rx="2"/>
            <path d="M2 14h2"/>
            <path d="M20 14h2"/>
            <path d="M15 13v2"/>
            <path d="M9 13v2"/>
          </svg>
        </span>
        <span class="nav-item-label">Chat with AI</span>
      <% end %>
    </div>

    <%# Account Section %>
    <div class="nav-section">
      <div class="nav-section-title">Account</div>

      <%= link_to entities_path, class: "nav-item" do %>
        <span class="nav-item-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 21a8 8 0 0 0-16 0"/>
            <circle cx="10" cy="8" r="5"/>
            <path d="M22 20c0-3.37-2-6.5-4-8a5 5 0 0 0-.45-8.3"/>
          </svg>
        </span>
        <span class="nav-item-label">Entities</span>
      <% end %>

      <%= link_to "#", class: "nav-item" do %>
        <span class="nav-item-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/>
            <circle cx="12" cy="7" r="4"/>
          </svg>
        </span>
        <span class="nav-item-label">Co-Users</span>
      <% end %>

      <%= link_to "#", class: "nav-item" do %>
        <span class="nav-item-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="3"/>
            <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/>
          </svg>
        </span>
        <span class="nav-item-label">Settings</span>
      <% end %>
    </div>
  </nav>

  <%# Sidebar Footer %>
  <div class="sidebar-footer">
    <% if current_user.trial? && current_user.trial_ends_at.present? %>
      <div class="nav-item" style="background: rgba(255, 120, 93, 0.1); color: var(--color-accent);">
        <span class="nav-item-icon">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
        </span>
        <span class="nav-item-label" style="font-size: var(--font-size-xs);">
          Trial ends <%= time_ago_in_words(current_user.trial_ends_at) %>
        </span>
      </div>
    <% end %>

    <%= button_to destroy_user_session_path, method: :delete, class: "nav-item", style: "width: 100%; text-align: left; cursor: pointer;" do %>
      <span class="nav-item-icon">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
          <polyline points="16 17 21 12 16 7"/>
          <line x1="21" x2="9" y1="12" y2="12"/>
        </svg>
      </span>
      <span class="nav-item-label">Log out</span>
    <% end %>
  </div>
</aside>
