<%# Page Header %>
<div class="page-header">
  <div class="page-header-content">
    <h1 class="page-title">Offer Details</h1>
    <p class="page-subtitle"><%= @property.street_address %>, <%= @property.suburb %></p>
  </div>
  <div class="page-header-actions">
    <%= link_to buyer_offers_path, class: "btn btn-secondary" do %>
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M19 12H5M12 19l-7-7 7-7"/>
      </svg>
      Back to Offers
    <% end %>
  </div>
</div>

<div class="dashboard-main">
  <%# Left Column - Offer Details %>
  <div class="flex flex-col gap-6">
    <%# Status Card %>
    <div class="dashboard-panel">
      <div class="dashboard-panel-header">
        <h2 class="dashboard-panel-title">Offer Status</h2>
        <span class="badge badge-lg <%= offer_status_badge_class(@offer.status) %>"><%= @offer.status.humanize %></span>
      </div>

      <div class="stats-summary">
        <div class="stats-row">
          <span class="stats-label">Your Offer</span>
          <span class="stats-value font-bold"><%= number_to_currency(@offer.amount_cents / 100, precision: 0) %></span>
        </div>
        <% if @offer.counter_amount_cents.present? %>
          <div class="stats-row">
            <span class="stats-label">Counter Offer</span>
            <span class="stats-value font-bold" style="color: var(--color-warning);"><%= number_to_currency(@offer.counter_amount_cents / 100, precision: 0) %></span>
          </div>
        <% end %>
        <div class="stats-row">
          <span class="stats-label">Submitted</span>
          <span class="stats-value"><%= @offer.created_at.strftime("%d %B %Y at %I:%M %p") %></span>
        </div>
        <% if @offer.expires_at.present? %>
          <div class="stats-row">
            <span class="stats-label">Expires</span>
            <span class="stats-value"><%= @offer.expires_at.strftime("%d %B %Y at %I:%M %p") %></span>
          </div>
        <% end %>
      </div>
    </div>

    <%# Conditions %>
    <% if @offer.conditions.present? && @offer.conditions.any? %>
      <div class="dashboard-panel">
        <div class="dashboard-panel-header">
          <h2 class="dashboard-panel-title">Offer Conditions</h2>
        </div>

        <ul style="list-style: disc; padding-left: 1.5rem;">
          <% @offer.conditions.each do |condition| %>
            <li class="mb-2"><%= condition %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%# Notes %>
    <% if @offer.notes.present? %>
      <div class="dashboard-panel">
        <div class="dashboard-panel-header">
          <h2 class="dashboard-panel-title">Notes to Seller</h2>
        </div>

        <p class="text-secondary"><%= @offer.notes %></p>
      </div>
    <% end %>

    <%# Actions based on status %>
    <% if @offer.status == "countered" %>
      <div class="dashboard-panel">
        <div class="dashboard-panel-header">
          <h2 class="dashboard-panel-title">Next Steps</h2>
        </div>

        <p class="text-secondary mb-4">The seller has made a counter offer. You can accept, reject, or make a new offer.</p>

        <div class="flex gap-3">
          <%= link_to ai_conversations_path(assistant: :stevie, context: "offer"), class: "btn btn-primary" do %>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"/>
            </svg>
            Get Advice
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <%# Right Column - Property Summary %>
  <div class="flex flex-col gap-6">
    <div class="dashboard-panel">
      <div class="dashboard-panel-header">
        <h2 class="dashboard-panel-title">Property</h2>
      </div>

      <%= link_to property_seo_path(@property), class: "property-card", data: { turbo_frame: "_top" } do %>
        <div class="property-card-image">
          <% if @property.hero_image.attached? %>
            <%= image_tag @property.hero_image.variant(resize_to_fill: [400, 250]), alt: @property.street_address %>
          <% else %>
            <div class="property-card-placeholder">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
              </svg>
            </div>
          <% end %>
        </div>
        <div class="property-card-content">
          <div class="property-card-price"><%= @property.price_range_display %></div>
          <div class="property-card-address"><%= @property.street_address %></div>
          <div class="property-card-location"><%= @property.suburb %>, <%= @property.state %> <%= @property.postcode %></div>
          <div class="property-card-features">
            <span class="property-feature">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M2 4v16M2 8h18a2 2 0 0 1 2 2v10M2 17h20M6 8v9"/>
              </svg>
              <%= @property.bedrooms %> bed
            </span>
            <span class="property-feature">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 6 6.5 3.5a1.5 1.5 0 0 0-1-.5C4.683 3 4 3.683 4 4.5V17a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2v-5"/>
                <line x1="10" x2="8" y1="5" y2="7"/><line x1="2" x2="22" y1="12" y2="12"/>
                <line x1="7" x2="7" y1="19" y2="21"/><line x1="17" x2="17" y1="19" y2="21"/>
              </svg>
              <%= @property.bathrooms %> bath
            </span>
            <span class="property-feature">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M19 17h2c.6 0 1-.4 1-1v-3c0-.9-.7-1.7-1.5-1.9C18.7 10.6 16 10 16 10s-1.3-1.4-2.2-2.3c-.5-.4-1.1-.7-1.8-.7H5c-.6 0-1.1.4-1.4.9l-1.4 2.9A3.7 3.7 0 0 0 2 12v4c0 .6.4 1 1 1h2"/>
                <circle cx="7" cy="17" r="2"/><path d="M9 17h6"/><circle cx="17" cy="17" r="2"/>
              </svg>
              <%= @property.parking_spaces %> car
            </span>
          </div>
        </div>
      <% end %>
    </div>

    <%# Help from AI %>
    <div class="callout">
      <div class="callout-avatar" style="background: linear-gradient(135deg, #4F7DDD, #3D6BC7);">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2">
          <circle cx="12" cy="7" r="4"/>
          <path d="M5.5 21a7.5 7.5 0 0 1 13 0"/>
        </svg>
      </div>
      <div class="callout-content">
        <div class="callout-name">Need help with your offer?</div>
        <div class="callout-message">
          Chat with Stevie or Evie to get advice on negotiation strategy, understanding counter offers, or next steps.
        </div>
        <%= link_to "Ask for advice", ai_conversations_path, class: "btn btn-sm btn-primary mt-3" %>
      </div>
    </div>
  </div>
</div>
